<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Desktop.Robot" Version="1.3.1" />
      <PackageReference Include="FontStashSharp" Version="1.0.4" />
      <PackageReference Include="ppy.SDL2-CS" Version="1.0.501-alpha" />
      <PackageReference Include="Silk.NET.Maths" Version="2.15.0" />
      <PackageReference Include="Silk.NET.SDL" Version="2.15.0" />
      <PackageReference Include="X11" Version="1.0.6" />
    </ItemGroup>

    <ItemGroup>
      <None Update="font.ttf">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
    </ItemGroup>

</Project>
